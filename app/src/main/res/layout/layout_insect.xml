<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2cc54"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="905dp">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="1dp">

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="124dp"
                        android:layout_height="match_parent"

                        android:layout_marginStart="10dp"

                        android:onClick="rideOnMe"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.514" />

                    <ImageView
                        android:id="@+id/vopros"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"

                        android:layout_marginEnd="10dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.514" />
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"


                android:visibility="gone"

                app:layout_constraintBottom_toTopOf="@+id/right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.516" />

            <ImageView
                android:id="@+id/vopros1"
                android:layout_width="match_parent"
                android:layout_height="350dp"


                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:visibility="gone"

                app:layout_constraintBottom_toTopOf="@+id/right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.516" />


            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/vopros2"

                android:layout_width="match_parent"
                android:layout_height="350dp"

                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"


                android:visibility="gone"

                app:layout_constraintBottom_toTopOf="@+id/right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.516" />

            <ImageView
                android:id="@+id/left"
                android:layout_width="140dp"
                android:layout_height="100dp"

                android:layout_marginStart="40dp"
                android:layout_marginBottom="300dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager" />

            <ImageView
                android:id="@+id/right"
                android:layout_width="140dp"
                android:layout_height="100dp"

                android:layout_marginEnd="40dp"
                android:layout_marginBottom="300dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/right">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteY="140dp">

                    <RadioButton
                        android:id="@+id/radioFace"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/face"
                        android:button="@drawable/space" />

                    <RadioButton
                        android:id="@+id/radioVopros1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/vopros"
                        android:button="@drawable/space" />

                    <RadioButton
                        android:id="@+id/radioFood"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/food"
                        android:button="@drawable/space" />

                    <RadioButton
                        android:id="@+id/radioVopros2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/vopros"
                        android:button="@drawable/space" />

                </RadioGroup>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</ScrollView>
